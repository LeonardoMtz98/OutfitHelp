<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.oh.outfithelp.Vistas.AgregarPrenda"
    android:padding="30dp"
    android:background="@color/colorBlueDark"
    android:elevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/IBCerrarVentana"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_gravity="right"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TVTitulo"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:layout_gravity="left"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                    <ImageView
                        android:id="@+id/IVFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_margin="10dp"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TVInfoFoto"
                        android:textColor="@android:color/holo_red_dark"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/LYRotar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/IBRotarIzq"
                                android:layout_gravity="center"
                                android:padding="15dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_rotate_left_white_35dp"
                                style="@style/Widget.Design.FloatingActionButton"/>
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/IBRotarDer"
                                android:layout_gravity="center"
                                android:padding="15dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_rotate_right_white_35dp"
                                style="@style/Widget.Design.FloatingActionButton"/>
                        </LinearLayout>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/IBRecortarFoto"
                            android:layout_gravity="center|right"
                            android:padding="15dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_crop_black_24dp"
                            style="@style/Widget.Design.FloatingActionButton"/>

                    </FrameLayout>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/IBTomarFoto"
                        android:layout_gravity="right"
                        android:padding="15dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_photo_camera_black_24dp"
                        style="@style/Widget.Design.FloatingActionButton"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/IBValidar"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_arrow_forward_white_35dp"
                        style="@style/Widget.Design.FloatingActionButton"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/BTEnviar"
                        android:text="@string/Agregar"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:layout_gravity="bottom|center"
                        android:background="@color/colorPrimaryDark"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/LYEspera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:alpha=".70"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/TVInfoCarga"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
